<FluentAutocomplete TOption="Account"
                    AutoComplete="off"
                    Autofocus="true"
                    MaxAutoHeight="true"
                    OnOptionsSearch="@OnSearchAsync"
                    MaximumSelectedOptions="1"
                    OptionText="@(account => $"{account.Number} / {account.Name}")"
                    SelectedOptionsChanged="OnSelectedChanged"
                    ValueText="@(SelectedAccount?.Name)"/>