@page "/bookingtexts"
@rendermode InteractiveServer

<PageTitle>Buchungstexte</PageTitle>

<FluentButton IconStart="@(new Icons.Regular.Size16.Add())" Appearance="Appearance.Neutral" OnClick="AddAsync">Neuer Text hinzufügen</FluentButton>
<FluentPaginator State="@pagination" SummaryTemplate="@template" />

<FluentDataGrid Items="@bookingTextQueryable" Pagination="@pagination" RowSize="DataGridRowSize.Medium">
    <PropertyColumn Property="@(p => p.Text)" Sortable="true" IsDefaultSortColumn="true" />
    <TemplateColumn Align="Align.Center" Width="50px">
        <FluentButton IconEnd="@(new Icons.Regular.Size16.Delete())" Appearance="Appearance.Neutral" OnClick="@(() => DeleteAsync(context.Id))" />
    </TemplateColumn>
    <TemplateColumn Align="Align.Center" Width="50px">
        <FluentButton IconEnd="@(new Icons.Regular.Size16.Edit())" Appearance="Appearance.Neutral" OnClick="@(() => EditAsync(context.Id))" />
    </TemplateColumn>
</FluentDataGrid>

@code
{
    private RenderFragment template = @<span />;
    PaginationState pagination = new PaginationState() { ItemsPerPage = 20 };
}
