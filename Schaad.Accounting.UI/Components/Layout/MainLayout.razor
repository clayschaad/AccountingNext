@inherits LayoutComponentBase

<FluentLayout>
    <FluentHeader Class="hidePrint">
        <MyHeader/>
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu />
        <FluentBodyContent Class="body-content">
            <FluentMessageBarProvider Section="MESSAGES_TOP" @rendermode="InteractiveServer" />
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
    </FluentStack>

    <FluentFooter Class="hidePrint" Style="padding: 25px 5px 5px 5px ">
        AccountingNext App
        <FluentSpacer/>
        Copyright 2025 by Claudio Schaad
    </FluentFooter>
</FluentLayout>

<FluentDialogProvider @rendermode="InteractiveServer"/>
<FluentToastProvider MaxToastCount="10" @rendermode="InteractiveServer" />

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>